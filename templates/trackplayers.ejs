<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Track Players</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <header class="bg-primary py-3">
        <div class="container">
            <h1 class="text-white">Player Added!</h1>
        </div>
    </header>

    <div class="container">
        <br>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Player Name</th>
                   

                    <th>Team</th>
                    <% for (let stat in selectedStats) { %>
                        <th><%= selectedStats[stat] %></th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= playerName %></td>
                    <td><%= playerData.team.name %></td>
                    <% for (let stat in selectedStats) { %>
                        <td><%= playerData.statistics[selectedStats[stat]] %></td>
                    <% } %>
                </tr>
            </tbody>
        </table>
    </div>

    <footer class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p><a href="/">Home</a></p>
                </div>
            </div>
        </div>
    </footer>
    
</body>

</html>
